<Page x:Class="NcmPlayer.Views.Pages.PlaylistBar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NcmPlayer.Views.Pages" xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      Style="{StaticResource UiPage}"
      MinHeight="615"
      MinWidth="320"
      d:DesignHeight="615" d:DesignWidth="320"
      Height="{Binding playlisbarSize[1]}"
      Width="{Binding playlisbarSize[0]}"
      Title="PlayListBar">

    <Border Background="#0CD2D2D2" CornerRadius="10,10,10,10">
        <Grid >
            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,5,0,0" Text="当前播放" FontSize="30" FontWeight="Bold" FontFamily="Humnst777 BlkCn BT"/>
            <Label x:Name="label_songsCount" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,65,0,0" Content="{Binding CPlayCount}" FontSize="15"/>
            <ListBox x:Name="Playlist" Margin="0,93,0,0" PreviewMouseDoubleClick="Playlist_PreviewMouseDoubleClick"/>

        </Grid>
    </Border>

</Page>
