<Page
    x:Class="NcmPlayer.Views.MusicListDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="{x:Bind ViewModel.MusicDetailPageLoaded}">

    <Grid>
        <Grid x:Name="MainContent" Margin="0,0,20,90">
            <Grid Width="330" Margin="0,0,0,0" HorizontalAlignment="Left">
                <Border x:Name="PlaylistCover" BorderThickness="1" Width="250" Height="250" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FFC8C3C3" CornerRadius="10,10,10,10" Margin="30,0,0,0">
                    <Border x:Name="b_play" Width="55" Height="55" Opacity="0.9">
                        <Grid>
                            <Border Background="#7FE8E8E8" CornerRadius="10,10,10,10" />
                        </Grid>
                    </Border>
                </Border>
                <Grid Margin="34,250,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="250">
                    <StackPanel Margin="0,0,0,50">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="300">
                            <TextBlock x:Name="PlaylistDescription" Text="描述" TextWrapping="WrapWholeWords" FontSize="18" />
                        </ScrollViewer>
                    </StackPanel>
                </Grid>
                <Grid Margin="34,250,0,0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="250">
                    <TextBlock x:Name="PlaylistMusicsCount" Text="加载中" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" FontFamily="Humnst777 BlkCn BT" Opacity="0.6" />
                    <TextBlock x:Name="PlaylistCreator" Text="创建人" Margin="0,34,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" FontFamily="Humnst777 BlkCn BT" Opacity="0.6" />
                    <TextBlock x:Name="PlaylistCreateTime" Text="创建时间" Margin="0,34,0,0" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="16" FontFamily="Humnst777 BlkCn BT" Opacity="0.6" />
                </Grid>
            </Grid>
            <ScrollViewer Margin="315,0,0,0">
                <StackPanel Margin="0,0,0,0">
                    <TextBlock x:Name="PlaylistName" Text="加载中" TextTrimming="WordEllipsis" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="40" Margin="0,0,0,20" />
                    <StackPanel x:Name="PanelMusics" />
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>