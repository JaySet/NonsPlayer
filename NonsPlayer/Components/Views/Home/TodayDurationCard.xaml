<UserControl
    x:Class="NonsPlayer.Components.Views.TodayDurationCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:winUi="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">
    <Border Background="#F5F3F2"
            Width="200" Height="215"
            Margin="20,0,0,0"
            CornerRadius="20">
        <Grid Margin="20">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
                <TextBlock x:Uid="TodayDurationCard" FontSize="25" FontWeight="Bold"
                           Foreground="{StaticResource CommonTextColor}"
                           HorizontalAlignment="Center" />
                <TextBlock Style="{StaticResource EnglishTextStyle}"
                           FontSize="16">
                    <Run Text="TODAY" />
                    <Run Text="DURATION" />
                </TextBlock>
            </StackPanel>
            <TextBlock Text="00H" FontSize="48" FontWeight="Bold" Foreground="#3662EC"
                       HorizontalAlignment="Center" VerticalAlignment="Bottom"
                       Margin="0,20,0,20" />
        </Grid>
    </Border>
</UserControl>