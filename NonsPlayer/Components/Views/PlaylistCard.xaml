<Page
    x:Class="NonsPlayer.Components.Views.PlaylistCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="PlaylistCard_OnLoaded"
    mc:Ignorable="d">

    <Grid>
        <Border Margin="5,10,10,10" CornerRadius="10"
                PointerPressed="{x:Bind ViewModel.OpenMusicListDetail,Mode=OneWay}"
                PointerEntered="{x:Bind CardShow,Mode=OneWay}"
                PointerExited="{x:Bind CardHide,Mode=OneWay}">
            <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border Name="Cover"
                        Background="{x:Bind ViewModel.Cover,Mode=OneWay}"
                        Width="230" Height="230"
                        Margin="8" CornerRadius="10"
                        VerticalAlignment="Top" HorizontalAlignment="Center" />
                <TextBlock Name="Title"
                           Text="{x:Bind ViewModel.Title,Mode=OneWay}"
                           TextAlignment="Left" TextWrapping="WrapWholeWords"
                           Margin="0, 240,0,0"
                           FontWeight="Black" FontSize="18"
                           Width="224" Height="58" />

            </Grid>
        </Border>
    </Grid>
</Page>