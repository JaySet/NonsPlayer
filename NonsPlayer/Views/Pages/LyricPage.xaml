<Page
    x:Class="NonsPlayer.Views.Pages.LyricPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Name="OriginalLyric" Text="{x:Bind ViewModel.OriginalLyric,Mode=OneWay}"
                       HorizontalAlignment="Center" TextAlignment="Center"
                       FontFamily="HarmonyOS Sans SC" FontWeight="Bold" FontSize="20" />

            <TextBlock Name="TranLyric" Text="{x:Bind ViewModel.TranLyric, Mode=OneWay}"
                       Visibility="{x:Bind ViewModel.TransVisibility, Mode=OneWay}"
                       HorizontalAlignment="Center" TextAlignment="Center"
                       FontFamily="HarmonyOS Sans SC" FontWeight="Bold" FontSize="18" />
        </StackPanel>
    </Grid>
</Page>